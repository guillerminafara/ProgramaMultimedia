<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/fondo"
    >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Practico 1!"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="75dp"

        />

    <Button
        android:id="@+id/b1"
        android:layout_width="0dp"
        android:layout_height="75dp"
        tools:ignore="MissingConstraints"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="75dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/b2"
        android:layout_marginRight="45dp"
        android:backgroundTint="@color/lila"
        app:layout_constraintBottom_toTopOf="@id/b3"
        android:text="Ejer 1"
        android:textSize="25dp"

        />

    <Button
        android:id="@+id/b2"
        android:layout_width="0dp"
        android:layout_height="75dp"
        tools:ignore="MissingConstraints"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/b1"
        app:layout_constraintBottom_toTopOf="@id/b4"

        android:layout_marginTop="75dp"
        android:layout_marginRight="45dp"
        android:text="Ejer 2"
        android:textSize="25dp"
        android:backgroundTint="@color/lila"

        />
    <Button
        android:id="@+id/b3"
        android:layout_width="0dp"
        android:layout_height="75dp"
        tools:ignore="MissingConstraints"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="45dp"
        android:layout_marginBottom="75dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginRight="45dp"
        app:layout_constraintEnd_toStartOf="@+id/b4"
        android:text="Ejer 3"
        android:textSize="25dp"
        android:backgroundTint="@color/lila"

        />

    <Button
        android:id="@+id/b4"
        android:layout_width="0dp"
        android:layout_height="75dp"
        tools:ignore="MissingConstraints"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/b1"
        android:layout_marginBottom="75dp"
        android:layout_marginRight="45dp"
        app:layout_constraintStart_toEndOf="@+id/b3"
        android:text="Ejer 4"
        android:textSize="25dp"
        android:backgroundTint="@color/lila"

        />

</androidx.constraintlayout.widget.ConstraintLayout>